{
  "name": "site",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.17 <23"
  },
  "scripts": {
    "clean": "node scripts/force-clean-next.js",
    "predev": "node scripts/ensure-next-writable.js",
    "dev": "next dev",
    "build": "next build",
    "start": "cross-env PORT=3000 next start -H 0.0.0.0",
    "lint": "next lint",
    "postinstall": "prisma generate && next telemetry disable || true",
    "seed": "ts-node prisma/seed.ts",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "prisma db seed",
    "vercel-build": "prisma generate && prisma migrate deploy && next build",
    "images:fill-missing": "node scripts/fill-missing-images-from-ru.js",
    "i18n:check": "node scripts/i18n-check.mjs",
    "test:e2e": "playwright test",
    "test:ci": "playwright test --workers=2 --retries=1",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "compare:products": "ts-node scripts/compare-products.ts"
  },
  "dependencies": {
    "@next-auth/prisma-adapter": "^1.0.7",
    "@prisma/client": "^6.13.0",
    "@sentry/nextjs": "^10.3.0",
    "@swc/helpers": "^0.5.17",
    "@types/bcrypt": "^6.0.0",
    "@types/bcryptjs": "^2.4.6",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.12",
    "i18next": "^25.3.4",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "iconv-lite": "^0.6.3",
    "leaflet": "^1.9.4",
    "lightningcss": "1.30.1",
    "next": "15.4.6",
    "next-auth": "^4.24.11",
    "next-i18next": "^15.4.2",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-error-boundary": "^6.0.0",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.6.1",
    "react-icons": "^5.5.0",
    "react-leaflet": "^5.0.0",
    "swr": "^2.3.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.54.2",
    "@types/leaflet": "^1.9.20",
    "@types/node": "^20.19.11",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/uuid": "^10.0.0",
    "autoprefixer": "10.4.x",
    "cross-env": "^10.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "fs-extra": "^11.3.1",
    "postcss": "8.4.x",
    "prisma": "^6.13.0",
    "tailwindcss": "3.4.x",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.4",
    "typescript": "~5.6.0",
    "uuid": "^11.1.0"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  }
}
